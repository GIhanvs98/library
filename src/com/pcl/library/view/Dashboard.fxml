<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pcl.library.controller.DashboardController">
   <children>
      <Label layoutX="14.0" layoutY="14.0" prefHeight="22.0" prefWidth="178.0" text="Dashboard" textFill="#100dcd">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <Separator layoutX="-1.0" layoutY="40.0" prefHeight="3.0" prefWidth="600.0" />
      <TextField fx:id="txtBId" editable="false" layoutX="22.0" layoutY="53.0" promptText="Book Id" />
      <TextField fx:id="txtBName" layoutX="192.0" layoutY="53.0" promptText="Book Name" />
      <TextField fx:id="txtAuthor" layoutX="381.0" layoutY="53.0" prefHeight="25.0" prefWidth="149.0" promptText="Author" />
      <Button layoutX="509.0" layoutY="102.0" mnemonicParsing="false" onAction="#saveOnAction" style="-fx-background-color: #6c5ce7;" text="Save Book" textFill="WHITE" />
      <ComboBox fx:id="cmbCupboard" layoutX="22.0" layoutY="89.0" prefWidth="150.0" promptText="Select Cupboard" />
      <ComboBox fx:id="cmdSection" layoutX="192.0" layoutY="89.0" prefWidth="150.0" promptText="Select Section" />
      <RadioButton fx:id="rBtnIsAvailableYes" layoutX="381.0" layoutY="106.0" mnemonicParsing="false" text="Yes">
         <toggleGroup>
            <ToggleGroup fx:id="availiability" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="rBtnIsAvailableNo" layoutX="445.0" layoutY="106.0" mnemonicParsing="false" selected="true" text="No" toggleGroup="$availiability" />
      <Label layoutX="391.0" layoutY="85.0" text="Book Availiabilty" textFill="#6d0cff">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
